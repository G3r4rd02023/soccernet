@model soccer.Data.Entities.Team

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<flash dismissable="true" />


<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.LogoPath)
    </dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.LogoPath))
        {
            <img src="@Url.Content(Model.LogoPath)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
        }
    </dd>
</dl>

<div>    
    <div>
        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
    </div>
</div>
